  "scripts": {
    "client-dev": "parcel index.html --no-cache --port 8080 --open",
    "client-build": "parcel build index.html",
    "server-dev": "nodemon --env-file=.env --watch server --ext js,json,html,css server/server.js",
    "dev": "concurrently \"npm run server-dev\" \"npm run client-dev\"",
    "deploy": "rm -rf dist && npm run client-build",
    "prod": "node --env-file=.env server/server.js"
  },
  "dependencies": {
    "@fastify/static": "^8.0.2",
    "better-sqlite3": "^11.5.0",
