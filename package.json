    "plotly.js-basic-dist-min": "^2.35.2"
  },
  "devDependencies": {
    "@types/mithril": "^2.2.7",
    "concurrently": "^9.0.1",
    "nodemon": "^3.1.7",
    "pino-pretty": "^11.3.0"
  }
}
